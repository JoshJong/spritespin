{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "noResolve": true,
    "outDir": "release/src",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "newLine": "LF",
    "rootDir": "src",
    "module": "es2015",
    "moduleResolution": "node",
    "alwaysStrict": true,
    "noEmitHelpers": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
      "jquery",
      "node"
    ]
  },
  "exclude": [
    "src/**/*.test.ts",
    "node_modules",
    "release"
  ]
}
